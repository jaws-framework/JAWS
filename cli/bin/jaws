#!/usr/bin/env node

var JAWS = require('../lib/main.js');
var program = require('commander');
var shortid = require('shortid');



/**
 * Deploy
 * - Deploys the Lambda Function to AWS Lambda
 */

program
  .version( JAWS.version )
  .command( 'deploy' )
  .description( 'Deploy your application to Amazon Lambda' )
  .action( function( prg ) {
    JAWS.deploy( prg );
  });


/**
 * Run
 * - Runs the Lambda Function locally
 */

program
  .version( JAWS.version )
  .command( 'run' )
  .description( 'Run your Amazon Lambda application locally' )
  .action( function( prg ) {
    JAWS.run( prg );
  });


/**
 * Server
 * - Starts the webserver for the application
 */

program
  .version( JAWS.version )
  .command( 'server' )
  .description( 'Start your server' )
  .action( function( prg ) {
    JAWS.server( prg );
  });


/**
 * Init
 * - Initialize a Lambda Function locally
 */

program
  .version( JAWS.version )
  .command( 'new' )
  .description( 'Initialize an Amazon Lambda locally' )
  .action( function( prg ) {
    JAWS.initLambda( prg );
  });


program.parse( process.argv );
